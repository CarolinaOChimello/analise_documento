{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Next.js: dev",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "port": 9229,
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Process",
        "port": 9229,
        "restart": true,
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true
      }
    ]
  }